<div class="row">
  <div class="col-md-12">
    <h2>Add Category</h2>
    <hr />
    <form action="/categories/add" method="POST">
      <div class="form-group">
        <label for="category">Category Name</label>
        <input
          type="text"
          class="form-control"
          name="category"
          id="category"
          required
        />
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>